<StartScreen>:
    name: 'start'
    MDLabel:
        text: 'What to Eat'
        halign: 'center'

    MDRectangleFlatButton:
        text: 'Lets Eat!'
        text_color: (1, 1, 1, 1)
        md_bg_color: (1, 0.65, 0, 1)
        pos_hint: {'center_x':0.5,'center_y':0.3}
        on_press:
            root.manager.current = 'option1'
            root.manager.transition.direction = "left"

    MDRectangleFlatButton:
        text: "I Don't Know!"
        text_color: (1, 1, 1, 1)
        md_bg_color: (1, 0.45, 0, 1)
        pos_hint: {'center_x':0.5,'center_y':0.2}
        on_press:
            app.idk_rand()
            app.user_answers()
            root.manager.current = 'decision'
            root.manager.transition.direction = "left"

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'What to Eat'
            left_action_items: [["menu", lambda x:nav_drawer.toggle_nav_drawer()]]
            md_bg_color: (1, 0.45, 0, 1)
            elevation: 10
        Widget:

    MDNavigationDrawer:
        id: nav_drawer

        MDBoxLayout:
            orientation: 'vertical'

            MDToolbar:
                title: 'Settings'
                md_bg_color: (1, 0.65, 0, 1)

            ScrollView:
                MDList:
                    OneLineListItem:
                        text: 'Themes'
                        on_press:
                            root.manager.current = 'theme'
                            root.manager.transition.direction = "left"
                    OneLineListItem:
                        text: 'Meal Type'
                        on_press:
                            root.manager.current = 'mealType'
                            root.manager.transition.direction = "left"
                    OneLineListItem:
                        text: 'Personalization'
                        on_press:
                            root.manager.current = 'personal'
                            root.manager.transition.direction = "left"
                    OneLineListItem:
                        text: 'Add Foods'
                        on_press:
                            root.manager.current = 'add'
                            root.manager.transition.direction = "left"

<ThemeScreen>:
    name:'theme'

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
