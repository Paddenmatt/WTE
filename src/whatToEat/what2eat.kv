        text_color: (1, 1, 1, 1)
        md_bg_color: (1, 0.5, 0, 1)

    MDRectangleFlatButton:
        text: 'Dark'
        pos_hint: {'center_x':0.7,'center_y':0.5}
        on_press:
            app.dark_theme()
        text_color: (1, 1, 1, 1)
        md_bg_color: (1, 0.5, 0, 1)

    MDRectangleFlatButton:
        text: 'Go Back'
        pos_hint: {'center_x':0.5,'center_y':0.1}
        on_press:
            root.manager.current = 'start'
            root.manager.transition.direction = "right"
        text_color: (1, 1, 1, 1)
        md_bg_color: (1, 0.5, 0, 1)

